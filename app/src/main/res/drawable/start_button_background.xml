<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">

            <size android:height="40dp"
                android:width="40dp"/>

            <gradient
                android:startColor="#000000"
                android:endColor="#333333"/>
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="1dp">
        <shape android:shape="oval">

            <gradient
                android:angle="135"
                android:startColor="#308550"
                android:endColor="#22CC42"/>
        </shape>
    </item>

</layer-list>