<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"
            android:thickness="24dp">
        <gradient
            android:startColor="#DCDCDC"
            android:angle="90"
            android:centerColor="#303030"
            android:type="radial"
            android:gradientRadius="140dp"
            android:endColor="#DCDCDC"/>
            <size android:height="150dp"
                android:width="150dp"/>
        </shape>
    </item>
    <item android:bottom="5dp"
        android:right="3dp">
        <shape android:shape="oval"
            android:thickness="100dp">
            <gradient
                android:startColor="#800000"
                android:centerColor="@android:color/holo_red_dark"
                android:type="radial"
                android:gradientRadius="80dp"
                android:endColor="@android:color/holo_red_light"
                />
        </shape>
    </item>
</layer-list>